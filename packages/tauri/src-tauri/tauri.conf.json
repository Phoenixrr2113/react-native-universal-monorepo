{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "My Tauri App",
  "version": "0.0.0",
  "identifier": "com.mytauriapp.dev",
  "build": {
    "beforeDevCommand": "yarn start",
    "beforeBuildCommand": "yarn craco build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "My Tauri App",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "John Doe",
    "category": "DeveloperTool",
    "shortDescription": "My Tauri desktop application",
    "longDescription": "A modern desktop application built with Tauri 2.0 and React"
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
